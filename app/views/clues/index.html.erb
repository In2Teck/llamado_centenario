<h1>Listing clues</h1>

<table>
  <tr>
    <th>Image url</th>
    <th>Description</th>
    <th>Longitude</th>
    <th>Latitude</th>
    <th>Radius</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @clues.each do |clue| %>
  <tr>
    <td><%= clue.image_url %></td>
    <td><%= clue.description %></td>
    <td><%= clue.longitude %></td>
    <td><%= clue.latitude %></td>
    <td><%= clue.radius %></td>
    <td><%= clue.active %></td>
    <td><%= link_to 'Show', clue %></td>
    <td><%= link_to 'Edit', edit_clue_path(clue) %></td>
    <td><%= link_to 'Destroy', clue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Clue', new_clue_path %>
