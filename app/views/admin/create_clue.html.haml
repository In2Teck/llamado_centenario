- content_for :head_script do
  = javascript_include_tag "map"
%header
  %h1 Crea la pista
%section
  %figure#clue-creator
    %figcaption Selecciona la ubicaciÃ³n
    #map-canvas
  %section
    = form_for(@clue, :url => :assign_tickets_clues) do |f|
      .field
        = f.label :description
        = f.text_field :description
      .field
        = f.label :image_url
        = f.text_field :image_url
      .field
        = f.hidden_field :longitude
        = f.hidden_field :latitude
        = f.hidden_field :radius
        = f.hidden_field :active, :value => true
        = f.hidden_field :source_type, :value => "web"
      .field
        %label{"for" => "ticket_number"} Ticket number
        %input#ticket_number{"name" => "ticket_number"}
      .actions
        = f.submit
